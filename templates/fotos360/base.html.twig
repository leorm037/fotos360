{# templates/fotos360/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="generator" content="">
        <title>{% block title %}Fotos 360º{% endblock %}</title>
        <link href="{{ asset('dist/photo-sphere-viewer.css', 'photo-sphere-viewer') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap.min.css', 'bootstrap') }}" rel="stylesheet">
        <link href="{{ asset('bootstrap-icons.css', 'bootstrap-icons') }}" rel="stylesheet">
        <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% if 'prod' != app.environment %}
        <span id="environment">Ambiente de {{ app.environment }}</span>
        {% endif %}
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-8 col-md-6 mx-auto m-5">
                        <h1 class="text-center"><i class="bi bi-camera2"></i> ALBUM DE FOTOS</h1>
                        <p class="text-center">Aniversário de Roberta e Letícia</p>
                    </div>
                </div>
            </div> 
        </header>
        <main>
            <div class="container">
                {% for class, messages in app.flashes %}
                    {% for message in messages %}
                <div class="alert alert-{{ class }} alert-dismissible fade show" role="alert">
                    <i class="bi 
                        {% if class == 'primary' %}
                            bi-info-circle-fill
                        {% elseif class == 'secondary' %}
                            bi-info-circle-fill
                        {% elseif class == 'success' %}
                            bi-check-circle-fill
                        {% elseif class == 'danger' %}
                            bi-x-circle-fill
                        {% elseif class == 'warning' %}
                            bi-exclamation-triangle-fill
                        {% elseif class == 'info' %}
                            bi-info-square-fill
                        {% elseif class == 'light' %}
                            bi-lightbulb
                        {% elseif class == 'dark' %}
                            bi-flag-fill
                        {% else %}
                            bi-chat-dots
                        {% endif %}"></i> {{ message|raw }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </div>
                    {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
        </main>        
        <script src="{{ asset('js/jquery-3.6.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.js','bootstrap') }}"></script>
        <script src="{{ asset('js/browser.js') }}"></script>
        <script src="{{ asset('js/three.min.js') }}"></script>
        <script src="{{ asset('dist/photo-sphere-viewer.js','photo-sphere-viewer') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
